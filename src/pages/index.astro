---
export const prerender = false;
import Layout from '../components/Layout.astro';

const tools = [
  {
    href: '/validate',
    title: 'OTLP Validator',
    description: 'Validate OpenTelemetry Protocol payloads for traces, logs, and metrics with detailed error reporting.',
    icon: '‚úì',
    status: 'stable' as const,
  },
  {
    href: '/trace-id',
    title: 'Trace ID Generator',
    description: 'Generate and validate trace IDs (32 hex chars) and span IDs (16 hex chars) for testing.',
    icon: 'üîë',
    status: 'stable' as const,
  },
  {
    href: '/trace-context',
    title: 'Trace Context',
    description: 'Encode and decode W3C traceparent and tracestate headers for distributed tracing.',
    icon: 'üîó',
    status: 'stable' as const,
  },
  {
    href: '/timestamp',
    title: 'Timestamp Converter',
    description: 'Convert between Unix nanoseconds, milliseconds, and human-readable timestamps.',
    icon: '‚è±',
    status: 'stable' as const,
  },
  {
    href: '/collector-config',
    title: 'Collector Config',
    description: 'Validate OpenTelemetry Collector YAML configurations and identify misconfigurations.',
    icon: '‚öôÔ∏è',
    status: 'stable' as const,
  },
  {
    href: '/semconv',
    title: 'Semantic Conventions',
    description: 'Search and browse OpenTelemetry semantic conventions for attributes and metrics.',
    icon: 'üìñ',
    status: 'stable' as const,
  },
];
---

<Layout 
  title="Home" 
  description="A collection of OpenTelemetry developer utilities for validation, debugging, and testing"
  activeNav="home"
>
  <div class="hero">
    <h1 class="hero-title">OTel Tools</h1>
    <p class="hero-subtitle">
      A collection of OpenTelemetry developer utilities for validation, debugging, and testing
    </p>
  </div>
  
  <div class="tools-grid">
    {tools.map(tool => (
      <a 
        href={tool.status === 'coming-soon' ? '#' : tool.href} 
        class:list={['tool-card', { 'coming-soon': tool.status === 'coming-soon' }]}
        aria-disabled={tool.status === 'coming-soon'}
      >
        <span class="tool-icon">{tool.icon}</span>
        <h2 class="tool-title">{tool.title}</h2>
        <p class="tool-description">{tool.description}</p>
        {tool.status === 'coming-soon' && <span class="tool-badge">Coming Soon</span>}
      </a>
    ))}
  </div>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 2rem 0 3rem;
  }
  
  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 0.75rem;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
    margin-top: 1rem;
  }
  
  .tool-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border: var(--card-border);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
  }
  
  .tool-card:hover:not(.coming-soon) {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
    border-color: var(--accent-primary);
  }
  
  .tool-card.coming-soon {
    opacity: 0.6;
    cursor: not-allowed;
  }
  
  .tool-card.coming-soon:hover {
    transform: none;
    box-shadow: none;
  }
  
  .tool-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
  }
  
  .tool-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 0.5rem;
  }
  
  .tool-description {
    font-size: 0.95rem;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.5;
    flex: 1;
  }
  
  .tool-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 0.25rem 0.5rem;
    background: var(--accent-secondary);
    color: white;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 4px;
  }
  
  @media (max-width: 640px) {
    .hero-title {
      font-size: 2.25rem;
    }
    
    .hero-subtitle {
      font-size: 1rem;
    }
    
    .tools-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
